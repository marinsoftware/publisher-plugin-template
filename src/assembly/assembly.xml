<assembly>
    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>apps</directory>
            <outputDirectory>apps</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>conf</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>env.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>node_modules</directory>
            <outputDirectory>node_modules</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist</directory>
            <outputDirectory>dist</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>logs</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*.log</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../node_modules</directory>
            <outputDirectory>node_modules</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <!-- standard for every assembly -->
            <source>${project.build.directory}/VERSION</source>
            <destName>VERSION</destName>
            <outputDirectory>.</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
            <filtered>true</filtered>
        </file>
        <file>
            <source>sh/publisher-gateway-plugins.sh</source>
            <outputDirectory>bin</outputDirectory>
            <destName>${project.artifactId}</destName>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>pm2-marin-snapchat-api.json</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>package.json</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>
</assembly>
